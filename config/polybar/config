format-prefix = " "
tail = true
click-left = notify-send "Packages: " "$(checkupdates)"
click-right = notify-send "Update with:" "sudo pacman -Syuu\nyaourt -Syyua"
format-prefix-foreground = ${colors.foreground}
exec = ~/.config/polybar/blocks/pacman

